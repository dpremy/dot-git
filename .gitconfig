# Custom .gitconfig settings

[core]
  excludefile = ~/.gitignore
  editor = vim
[color]
  ui = auto
  diff = auto
  grep = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
  # 'simple' requires git > 2.0, if running < 2.0 use 'matching'
  default = simple

# include requires git > 1.8
[include]
  path = ~/.gitconfig_local
