# Custom .gitconfig settings

# Please, specify these variables in ~/.gitconfig_local
# which is included at the end of this file
# Note: include requires git > 1.8
# [user]
#   email = dpremy@outlook.com
#   name = David Remy

[core]
  excludefile = ~/.gitignore
  editor = vim
[color]
  ui = auto
  diff = auto
  grep = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
  # 'simple' requires git > 2.0, if running < 2.0 use 'matching'
  default = simple
[include]
  path = ~/.gitconfig_local
