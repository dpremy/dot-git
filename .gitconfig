# Custom .gitconfig settings

[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[color]
  ui = auto
  diff = auto
  grep = auto
  branch = auto
  status = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
  # 'simple' requires git > 2.0, if running < 2.0 use 'matching'
  default = simple
[status]
  # branch and short were introduced in 1.8.4
  branch = true
  short = true
[log]
  decorate = short
  abbrevCommit = true
[help]
  autocorrect = 3
[format]
  # based on example from https://speakerdeck.com/allthedoll/tips-and-tricks-gotta-git-them-all?slide=12
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[alias]
  # based on comment at https://stackoverflow.com/a/35081008
  all = "!f() { find . -name .git -type d | sed s,/.git,, | xargs -I{} git -C {} $1; }; f"
[fetch]
  prune = true
[include]
  # include requires git > 1.8
  path = ~/.gitconfig_local
